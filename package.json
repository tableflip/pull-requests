{
  "name": "pull-requests",
  "version": "1.0.0",
  "description": "An overview of outstanding pull requests.",
  "main": "index.js",
  "scripts": {
    "start": "babel-node index.jsx",
    "test": "standard",
    "build": "npm-run-all --parallel build:*",
    "build:js": "browserify ./client.jsx -o public/bundle.js --im",
    "build:css": "node-sass --include-path node_modules ui/main.scss public/bundle.css",
    "minify": "npm-run-all --parallel minify:*",
    "minify:js": "uglifyjs public/bundle.js -o public/bundle.js",
    "minify:css": "postcss -u cssnano -i public/bundle.css -o public/bundle.css",
    "watch": "npm-run-all build --parallel watch:*",
    "watch:js": "nodemon -e js,jsx,json --ignore index.js --ignore index.jsx --ignore public/ -x 'npm run build:js'",
    "watch:css": "node-sass --include-path node_modules -w ui/main.scss public/bundle.css",
    "watch:server": "nodemon --watch . --ignore node_modules/ --ignore public/ -e js,jsx,json -x 'npm start'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tableflip/pull-requests.git"
  },
  "author": "TABLEFLIP",
  "bugs": {
    "url": "https://github.com/tableflip/pull-requests/issues"
  },
  "homepage": "https://github.com/tableflip/pull-requests#readme",
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "react"
          ]
        }
      ]
    ]
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "nodemon": "^1.9.2",
    "npm-run-all": "^2.1.1"
  },
  "dependencies": {
    "apollo-client": "^0.3.12",
    "async": "^2.0.0-rc.5",
    "bootstrap": "^4.0.0-alpha.2",
    "config": "^1.20.4",
    "express": "^4.13.4",
    "faker": "^3.1.0",
    "github-oauth": "^0.2.2",
    "graphql-tools": "^0.4.2",
    "moment": "^2.13.0",
    "parse-link-header": "^0.4.1",
    "promisify-node": "^0.4.0",
    "react": "^15.1.0",
    "react-apollo": "^0.3.5",
    "react-dom": "^15.1.0",
    "request": "^2.72.0",
    "request-promise": "^3.0.0"
  }
}
